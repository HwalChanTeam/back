<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.test.teamproject_back.repository.ProductMapper">
    <resultMap id="productMap" type="org.test.teamproject_back.entity.Product">
        <id property="productId" column="product_id"></id>
        <result property="title" column="title"></result>
        <result property="price" column="price"></result>
        <result property="stock" column="stock"></result>
        <result property="salesCount" column="sales_count"></result>
        <result property="description" column="description"></result>
        <result property="origin" column="origin"></result>
        <result property="img" column="img"></result>
        <result property="createdDate" column="created_date"></result>
        <collection property="categoryId" javaType="java.util.Set" resultMap="categoryMap"></collection>
    </resultMap>
    <resultMap id="categoryMap" type="org.test.teamproject_back.entity.Category">
        <id property="categoryId" column="category_id"></id>
        <result property="name" column="name"></result>
    </resultMap>

    <insert id="addProduct">
        insert into products_tb
        values(
            product_id = default,
            title = #{title},
            price = #{price},
            stock = #{stock},
            sales_count = #{salesCount},
            category_id = #{categoryId},
            description = #{description},
            origin = #{origin},
            img = #{img},
            created_date = now()
        )
    </insert>
    <select id="searchProductByTitle" resultType="org.test.teamproject_back.entity.Product">
        select
            *
        from
            products_tb
        where
            title like "%{title}%"
    </select>
</mapper>