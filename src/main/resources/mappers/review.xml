<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.test.teamproject_back.repository.ReviewMapper">
    <insert id="addReview">
        insert into reviews_tb
        values(0, #{userId}, #{productId}, #{rating}, #{title}, #{content}, #{reviewImg}, now())
    </insert>
    <update id="updateReview">
        update reviews_tb
        set
            rating = #{rating},
            title = #{title},
            content = #{content},
            review_img = #{reviewImg}
        where
            review_id = #{reviewId}
    </update>
    <delete id="deleteReview">
        delete from reviews_tb
        where
            review_id = #{reviewId}
    </delete>
    <select id="findReviewByUserId" resultType="org.test.teamproject_back.entity.Review">
        select
            *
        from
            reviews_tb
        where
            user_id = #{userId}
    </select>
    <select id="findReviewDate" resultType="java.time.LocalDate">
        select
            created_at
        from
            reviews_tb
        where
            review_id = #{reviewId}
    </select>
</mapper>